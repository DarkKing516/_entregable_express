      /* Estilos para los campos de servicios */
      #serviciosLista li {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
      }

      #serviciosLista select,
      #serviciosLista input {
        margin-bottom: 5px;
      }

      /* Estilos para los campos de productos */
