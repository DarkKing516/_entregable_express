      }

      /* Estilos para los campos de productos dentro del formulario principal */
      #editarPedidoForm #productosLista li {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 10px;
      }

      #editarPedidoForm #productosLista select,
      #editarPedidoForm #productosLista input {
